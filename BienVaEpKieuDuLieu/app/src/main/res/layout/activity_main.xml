<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hieu.bienvaepkieudulieu.MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@+id/edtNum1"
        android:layout_alignLeft="@+id/edtNum1"
        android:layout_alignStart="@+id/edtNum1"
        android:id="@+id/edtNum2"
        android:hint="Nhập số thứ hai"
        android:inputType="text|number" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text|number"
        android:ems="10"
        android:id="@+id/edtNum1"
        android:hint="Nhập số thứ nhất"
        android:layout_alignParentTop="true" />
    <TextView
        android:text="Tổng:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTong"
        android:textSize="13dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/edtNum2" />

    <TextView
        android:text="Trừ:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTru"
        android:textSize="13dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txtTong" />

    <TextView
        android:text="Nhân:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtNhan"
        android:textSize="13dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txtTru" />

    <TextView
        android:text="Chia:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtChia"
        android:textSize="13dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txtNhan" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtChia"
        android:id="@+id/layoutButton"
        android:layout_marginTop="10dp">

        <Button
            android:text="Cộng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCong"
            android:layout_weight="1" />

        <Button
            android:text="Trừ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnTru"
            android:layout_weight="1" />

        <Button
            android:text="Nhân"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnNhan"
            android:layout_weight="1" />

        <Button
            android:text="Chia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnChia"
            android:layout_weight="1" />
    </LinearLayout>
</RelativeLayout>
